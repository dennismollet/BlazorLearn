<h1>Grid</h1>

<SynergyGridTemplate ViewModel=@ViewModel></SynergyGridTemplate>
<div></div>
@((MarkupString)BuildHtml())


@functions{
    string BuildHtml()
    {
        //TableElement el = new TableElement();
